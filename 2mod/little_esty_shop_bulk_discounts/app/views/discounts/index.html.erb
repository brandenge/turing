<h2>Bulk Discounts</h2>
<h3>Merchant: <%= @merchant.name %></h3>

<h3>Upcoming Holidays</h3>
<ol>
<% @upcoming_holidays.each_with_index do |holiday, index| %>
  <li id="holiday-<%= index %>">
    <%= holiday[:name] %> - <%= holiday[:date] %>
  </li>
<% end %>
</ol>

<%= link_to 'Add New Bulk Discount', new_merchant_discount_path %>

<h3>List of Bulk Discounts</h3>
<table>
  <% @merchant.discounts.each do |discount| %>
    <tr id="discount-<%= discount.id %>">
      <td>
        <%= link_to "#{discount.percentage}% off #{discount.quantity} items or more", merchant_discount_path(@merchant, discount) %>
      </td>
      <td>
        <%= form_with url: merchant_discount_path(@merchant, discount), method: :delete, local: true do |form| %>
          <%= form.submit 'Delete Bulk Discount' %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
