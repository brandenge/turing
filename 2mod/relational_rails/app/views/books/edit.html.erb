<h2>Edit Book</h2>

<%= form_with url: "/books/#{@book.id}", method: :patch, local: true do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, value: @book.title %>
  <%= form.label :subtitle %>
  <%= form.text_field :subtitle, value: @book.subtitle %>
  <%= form.label :publisher %>
  <%= form.text_field :publisher, value: @book.publisher %>
  <%= form.label :publication_date %>
  <%= form.text_field :publication_date, value: @book.publication_date %>
  <%= form.label :is_in_print %>
  <%= form.check_box :is_in_print, checked: @book.is_in_print %>
  <%= form.label :page_count %>
  <%= form.number_field :page_count, value: @book.page_count.to_s %>

  <%= form.submit 'Update Book' %>
<% end %>
