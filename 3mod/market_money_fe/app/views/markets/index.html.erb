<h2>Markets</h2>

<table id='markets'>
  <tr id='headers'>
    <th>Name</th>
    <th>City</th>
    <th>State</th>
    <th>More Info</th>
  </tr>
  <% @markets.each do |market| %>
    <tr class='market'>
      <td class='name'><%= market.name %></td>
      <td class='city'><%= market.city %></td>
      <td class='state'><%= market.state %></td>
      <td class='more_info'>
        <%= button_to 'More Info', market_path(market.id), method: :get %>
      </td>
    </tr>
  <% end %>
</table>
